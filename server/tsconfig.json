{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "shared/*": ["../shared/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["types/", "node_modules/@types", "./src/global.d.ts"]
    
  },
  "include": ["src/**/*.ts", "../shared/**/*"],
  "exclude": ["node_modules"]
}