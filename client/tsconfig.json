{
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "moduleResolution": "bundler",
        "module": "ESNext",
        "esModuleInterop": true,
        "rootDir": "../",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "jsx": "react-jsx",
        "typeRoots": [ "node_modules/@types", "node" ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "shared/*": ["../shared/*"]
        }
    },
    "include": [
        "src",
        "../shared/**/*",
    ]
}
